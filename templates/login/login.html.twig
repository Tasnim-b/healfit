<div class="login-modal-overlay" id="loginModal" style="display: none;">
    <div class="login-modal-container">
        <!-- En-tête avec logo et bouton fermer -->
        <div class="login-modal-header">
            <div class="logo-container">
                <img src="{{ asset('images/healFit-logo.png') }}" alt="HealFit Logo" class="login-logo">
                <span class="login-logo-text">HEALFIT</span>
            </div>
            <button class="close-modal-btn" id="closeModalBtn">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <!-- Navigation entre login et register -->
        <div class="login-modal-tabs">
            <button class="modal-tab-btn active" data-tab="login">Connexion</button>
            <button class="modal-tab-btn" data-tab="register">Inscription</button>
        </div>

        <!-- Formulaire de Connexion -->
        <form class="login-modal-form active" id="modalLoginForm">
            <div class="form-group">
                <label for="modalLoginEmail">
                    <i class="fas fa-envelope"></i> Adresse Email
                </label>
                <input type="email" id="modalLoginEmail" placeholder="votre@email.com" required>
            </div>

            <div class="form-group">
                <label for="modalLoginPassword">
                    <i class="fas fa-lock"></i> Mot de passe
                </label>
                <input type="password" id="modalLoginPassword" placeholder="Votre mot de passe" required>
                <div class="password-toggle">
                    <i class="fas fa-eye" id="toggleModalLoginPassword"></i>
                </div>
            </div>

            <div class="form-options">
                <label class="checkbox-container">
                    <input type="checkbox" id="modalRememberMe">
                    <span class="checkmark"></span>
                    Se souvenir de moi
                </label>
                <a href="#" class="forgot-password" id="modalForgotPassword">
                    Mot de passe oublié ?
                </a>
            </div>

            <button type="submit" class="submit-btn login-submit">
                <i class="fas fa-sign-in-alt"></i> Se connecter
            </button>

            <div class="divider">
                <span>Ou continuer avec</span>
            </div>

            <div class="social-login">
                <button type="button" class="social-btn google-btn">
                    <i class="fab fa-google"></i> Google
                </button>
                <button type="button" class="social-btn facebook-btn">
                    <i class="fab fa-facebook-f"></i> Facebook
                </button>
            </div>
        </form>

        <!-- Formulaire d'Inscription -->
        <form class="register-modal-form" id="modalRegisterForm">
                    <!-- Champ Image de Profil -->
            <div class="form-group image-upload-group">
                <label for="modalProfileImage">
                    <i class="fas fa-image"></i> Photo de profil (optionnel)
                </label>
                <div class="image-upload-container">
                    <div class="image-preview" id="imagePreview">
                        <img src="" alt="Aperçu de l'image" class="preview-image">
                        <span class="preview-placeholder">
                            <i class="fas fa-user-circle"></i>
                            <span>Aucune image sélectionnée</span>
                        </span>
                    </div>
                    <div class="image-upload-controls">
                        <label for="modalProfileImage" class="image-upload-btn">
                            <i class="fas fa-cloud-upload-alt"></i> Choisir une image
                        </label>
                        <button type="button" class="image-remove-btn" id="removeImageBtn" style="display: none;">
                            <i class="fas fa-trash-alt"></i> Supprimer
                        </button>
                        <input type="file" id="modalProfileImage" accept="image/*"
                               class="image-input" data-max-size="5">
                        <span class="file-info" id="fileInfo"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="modalRegisterName">
                    <i class="fas fa-user"></i> Nom complet
                </label>
                <input type="text" id="modalRegisterName" placeholder="John Doe" required>
            </div>

            <div class="form-group">
                <label for="modalRegisterEmail">
                    <i class="fas fa-envelope"></i> Adresse Email
                </label>
                <input type="email" id="modalRegisterEmail" placeholder="votre@email.com" required>
            </div>

            <div class="form-group">
                <label for="modalRegisterPassword">
                    <i class="fas fa-lock"></i> Mot de passe
                </label>
                <input type="password" id="modalRegisterPassword" placeholder="Créez un mot de passe" required>
                <div class="password-toggle">
                    <i class="fas fa-eye" id="toggleModalRegisterPassword"></i>
                </div>
            </div>

            <div class="form-group">
                <label for="modalConfirmPassword">
                    <i class="fas fa-lock"></i> Confirmer le mot de passe
                </label>
                <input type="password" id="modalConfirmPassword" placeholder="Confirmez votre mot de passe" required>
                <div class="password-toggle">
                    <i class="fas fa-eye" id="toggleModalConfirmPassword"></i>
                </div>
            </div>

            <div class="form-options">
                <label class="checkbox-container">
                    <input type="checkbox" id="modalAcceptTerms" required>
                    <span class="checkmark"></span>
                    J'accepte les <a href="#" class="terms-link">conditions d'utilisation</a> et la <a href="#" class="terms-link">politique de confidentialité</a>
                </label>
            </div>

            <button type="submit" class="submit-btn register-submit">
                <i class="fas fa-user-plus"></i> S'inscrire
            </button>
        </form>
    </div>
</div>
